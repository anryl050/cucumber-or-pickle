{{#each comments as |comment|}}
                    <div class="col-start-1 col-span-3 justify-center py-2 px-2 bg-blue-50 border-blue-100 border-2 m-4 rounded-md ">      
                    <footer class="flex justify-between items-center mb-2 ">
                        <div class="flex items-center">
                        <div class="meta inline-flex items-center mr-3 text-sm text-gray-900">
                        <img class="mr-2 w-6 h-6 rounded-full font-semibold" src="https://flowbite.com/docs/images/people/profile-picture-2.jpg" alt="User Profile Picture">
                        {{user.username}}</div>
                        <div class="text-sm text-gray-600 font-semibold">{{format_date comment.created_at}}</div> 
                         <div class="grid content-end ">
                    </footer>
                        <div class="text flex justify-between items-center mb-2">
                        <p class=" text-gray-500"> {{comment_text}}</p>
                        </div>
                         <div class="flex items-end mt-4 space-x-4">
                                <button type="button"
                                    class="flex items-end text-sm text-gray-500 hover:underline dark:text-gray-400">
